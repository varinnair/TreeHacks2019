<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PolAffActivity">

    <Button
            android:text="Democrat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDem"
            android:onClick="onBtnClick"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="140dp"
            android:layout_marginStart="140dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="191dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.878"/>
    <Button
            android:text="Libertarian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLiber"
            android:onClick="onBtnClick"
            android:layout_marginStart="136dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="136dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnDem"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btnOther"
            app:layout_constraintVertical_bias="0.41"/>
    <Button
            android:text="Other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnOther"
            android:onClick="onBtnClick"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" android:layout_marginStart="148dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="148dp"/>
    <Button
            android:text="Republican"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRep" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/btnDem" android:onClick="onBtnClick"
            android:layout_marginStart="136dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="136dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.976"/>
    <TextView
            android:text="Please select your political affiliation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="61dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>